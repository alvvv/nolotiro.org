<% content_for :meta_title, "#{t('nlt.published_ads')} - #{@user.username}" %>

<div id="default_header_section">
  <h1><%= t 'nlt.published_ads' %>  -  <%= @user.username %></h1>
  <h4><%= t('nlt.member_since') %>: <%= l @user.created_at, format: :long %></h4>
</div>

<div id="main">

  <div class="span-17" id="list-ads-profile">

    <%= render "woeid/filter_status" %>

    <div class="span-5 mobile">
      <div class="google_ad_wrapper">
        <%= render partial: "partials/google_adsense", locals: { class_name: "mobile google_adsense_336_280", ad_slot: "7225596067"}  %>
      </div>
    </div>

    <% if @ads.count > 0 %>
      <% @ads.each do |ad| %>
        <%= render :partial => "ads/ad", :locals => { :ad => ad } %>
      <% end %>
      <%= render partial: "partials/pagination", locals: { items: @ads } %>
    <% else %>
      <div class="alert alert-info"> <%= t("nlt.no_results.on_user") %> </div>
    <% end %>

  </div>

  <div class="span-5 desktop">
    <%= render partial: "actions" %>
    <%= render partial: "friends" %>

    <%= render partial: "partials/google_adsense", locals: { class_name: "google_adsense_600_160", ad_slot: "6783776462"}  %>
    <% if @ads.count > 5 %>
      <%= render partial: "partials/google_adsense", locals: { class_name: "google_adsense_600_160", ad_slot: "6783776462"}  %>
    <% end %>
    <% if @ads.count > 10 %>
      <%= render partial: "partials/google_adsense", locals: { class_name: "google_adsense_600_160", ad_slot: "6783776462"}  %>
    <% end %>
  </div>

  <div class="span-5 mobile">
    <div class="google_ad_wrapper">
      <%= render partial: "partials/google_adsense", locals: { class_name: "mobile google_adsense_336_280", ad_slot: "7225596067"}  %>
    </div>
  </div>

</div>
